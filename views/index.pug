doctype html
html

head
meta(charset='utf-8')
link(rel='stylesheet' type='text/css' href='bootstrap/dist/css/bootstrap.min.css')
link(rel='stylesheet' type='text/css' href='style.css')
title= title

body
form.form-inline.qt.rounded.mb-0(action='/submit' method='post'): div.container.col-12: div.form-group.row
	div.input-group.input-group-sm.col-12.m-0.p-1
		div.input-group-addon.col-2 Input File(s) or Directory
		input.form-control.form-control-sm(id='input' type='file' webkitdirectory directory multiple)
	div.input-group.input-group-sm.col-12.m-0.p-1
		div.input-group-addon.col-2 Optional Output Directory
		input.form-control.form-control-sm(id='output' type='file' webkitdirectory directory multiple)
	div.input-group.input-group-sm.col-12.m-0.p-1
		div.input-group-addon.col-2 ./usr/rules.csv
		textarea.form-control.form-control-sm(id='rules' placeholder='user rules.csv file' type='text' rows='20') #{usr.rules}
	div.input-group.input-group-sm.col-12.m-0.p-1
		div.input-group-addon.col-2 ./usr/append.csv
		textarea.form-control.form-control-sm(id='append' placeholder='user append.csv file' type='text' rows='10') #{usr.append}
	div.input-group.input-group-sm.col-1.mx-auto.p-1
		button.form-control.form-control-sm(type='submit') Start
script(src='jquery/dist/jquery.min.js')
script(src='moment/min/moment.min.js')
script(src='tether/dist/js/tether.min.js')
script(src='bootstrap/dist/js/bootstrap.min.js')
	